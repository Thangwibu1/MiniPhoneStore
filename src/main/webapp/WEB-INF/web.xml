<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

  <display-name>PhoneStore</display-name>

  <!-- Trang chào mừng -->
  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>

  <!-- Khai báo Servlet -->
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.yourcompany.phonestore.controller.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>


  <!-- Khai báo Filter để kiểm tra quyền truy cập -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.yourcompany.phonestore.controller.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <!-- Áp dụng filter này cho các trang cần đăng nhập -->
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/cart</url-pattern>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>

</web-app>
